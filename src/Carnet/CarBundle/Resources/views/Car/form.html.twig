<h3>Formulaire de véhicule</h3>

<div class="well">
	{{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}

	<div class="form-group">
		{{ form_label(form.mark, "Marque du véhicule", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
		{{ form_errors(form.mark) }}
		<div class="col-sm-10">
			{{ form_widget(form.mark, {'attr': {'class': 'form-control'}}) }}
		</div>
	</div>

	<div class="form-group">
		{{ form_label(form.model, "Modèle du véhicule", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
		{{ form_errors(form.model) }}
		<div class="col-sm-10">
			{{ form_widget(form.model, {'attr': {'class': 'form-control'}}) }}
		</div>
	</div>

	<div class="form-group">
		{{ form_label(form.note, "Remarques", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
		{{ form_errors(form.note) }}
		<div class="col-sm-10">
			{{ form_widget(form.note, {'attr': {'class': 'form-control'}}) }}
		</div>
	</div>

	{{ form_widget(form.save, {'attr': {'class': 'btn btn-primary'}}) }}

	{{ form_rest(form) }}

	{{ form_end(form) }}
</div>